<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="66dp"
        android:text="Tip App"
        android:textColor="#FF94CC"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="60dp"
        app:hintTextColor="@color/white"
        app:boxStrokeColor="@color/white"
        android:hint="Bill Amount"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/amt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textSize="38dp"
            android:textColor="#F7FD04"
            android:cursorVisible="true"
            android:textAlignment="center"
            android:textCursorDrawable="@color/white"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/perview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textSize="43sp"
        android:text="0%"
        android:textColor="#FF005C"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        />

    <com.google.android.material.slider.Slider
        android:id="@+id/percentage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="0"
        android:valueTo="10"
        android:stepSize="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="20dp"
        app:trackColor="@color/white"
        app:thumbColor="#FD7014"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/pariwartan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="40sp"
        android:text="Calculate"
        android:textAllCaps="false"
        android:backgroundTint="#00E0FF"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:onClick="ChangeActivity"
        />
    </LinearLayout>
</ScrollView>